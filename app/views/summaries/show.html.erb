<h1><%= @post.summary.name %></h1>

<div class="row">
  <div class="col-md-8">
    <p><%= @post.summary.description %></p>
  </div>
  <div class="col-md-4">
    <% if policy(@post).edit? %>
      <%= link_to "Edit Summary", edit_topic_post_summary_path(@topic, @post), class: 'btn btn-success' %>
    <% end %>
  </div>
</div>