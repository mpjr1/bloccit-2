<div class="media">
  <div class="media-body">
    <%= comment.body %>
    <% if comment.user %>
    <small>
      <%= image_tag comment.user.avatar.tiny.url if comment.user.avatar? %>
      submitted <%= time_ago_in_words(comment.created_at) %> ago by <%= comment.user.name %>
      <% end %>
      <% if policy(comment).edit? %>
      | <%= link_to "Edit", edit_topic_post_comment_path(@topic, @post, comment) %>
      <% end %>
      <% if policy(comment).destroy? %>
        | <%= link_to "Delete", [@topic, @post, comment], method: :delete %>
      <% end %>
    </small>
  </div>
</div>